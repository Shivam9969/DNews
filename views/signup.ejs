<html>
    <head>
        <title>Sign Up Page</title>
        <meta charset="utf-8">
        <style>
          input.ng-invalid {
            background-color: pink;
          }
        
          input.ng-valid {
            background-color: lightgreen;
          }
        </style>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
        <!-- CSS only -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/animejs@3.0.1/lib/anime.min.js"></script>
      
      </head>
<body style="background-image: url('Img/News.jpg')" ng-app="">
    <% if(typeof err !='undefined' ) { %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= err %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
      </div>
      <% } %>
    <div class="card text-center" style="width: 360px;left:40%;margin-top: 2%" id="vf">
        <div class="card-header bg-info" style="color: white">
          User Signup
        </div>
        <div class="card-body">
            <form ng-model="myName" class="form-horizontal" action="/render" method="post" >
                <div class="form-group " style="width: 100%;">
                    <label class="control-label" for="drop1">User Type:</label>
                    <div class="col-sm-12">
                        <select name="rtype" id="drop1" class="form-control" style="width: 100%">
                            <option value="vendor">vendor</option>
                            <option value="user">User</option>
                          </select>
                          
                    </div>
                  </div>
    <div class="form-group " style="width: 100%;">
      <label class="control-label" for="name">Name:</label>
      <div class="col-sm-12">
        <input type="text" minlength="2" pattern="[A-Za-z].{2,}" class="form-control" id="name" maxlength="20" placeholder="Enter Name" name="uname" ng-model="uname" required>
      </div>
    </div>
    <div class="form-group " style="width: 100%;">
        <label class="control-label" for="email">Email:</label>
        <div class="col-sm-12">
          <input type="email" class="form-control" id="email" maxlength="100" placeholder="Enter email" name="email" ng-model="email" required>
        </div>
      </div>
      
    <div class="form-group">
      <label class="control-label" for="pwd">Password:</label>
      <div class="col-sm-12">          
        <input type="password" minlength="8" maxlength="29" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,12}$" class="form-control" id="pwd" placeholder="Enter password" name="pwd" ng-model="pwd" required>
      </div>
    </div>
    <div class="form-group">
        <label class="control-label" for="phno">Phone:</label>
        <div class="col-sm-12">          
          <input type="text" pattern="\d*" minlength="10" maxlength="10" class="form-control" id="phno" placeholder="Phno" name="phno" ng-model="phno" required>
        </div>
    </div>
    <div class="form-group " style="width: 100%;">
        <label class="control-label" for="drop">Area:</label>
        <div class="col-sm-12">
            <select name="area" id="drop" class="form-control" style="width: 100%">
                <option value="Kandivali">Kandivali</option>
                <option value="Borivali">Borivali</option>
                <option value="Goregaon">Goregaon</option>
              </select>
              
        </div>
      </div>
      <div class="form-group">
        <label class="control-label" for="add">Address:</label>
        <div class="col-sm-12">          
          <input type="text" minlength="2" maxlength="100" class="form-control" id="add" placeholder="Address" name="add" ng-model="add" required>
        </div>
      </div<br><br>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-12">
        <button type="submit" class="btn btn-default btn-success" style="width: 100%;">Signup</button>
      </div>
    </div>
    
  </form>
        </div>
        <div class="card-footer text-muted bg-info" style="color: white">
          <a>User Signup</a>
        </div>
      </div>
    <script>
    let animation = anime({
    targets: '#vf',
    // Properties
    scaleY:200,
    // Property Parameters
    duration: 500,
    
    easing: 'linear',
    // Animation Parameters
    direction: 'alternate'
    });
    </script>
</body>

</html>